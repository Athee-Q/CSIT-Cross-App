<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSIT.ZB.Apps.Buyer.Views.Pages.Login.LoginPage">
    <StackLayout Padding="10" VerticalOptions="Center">
        <Label Text="Welcome to CSIT.ZB App" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Email or Mobile Number" Text="{Binding Identifier}" />
        <Button Text="Login" Command="{Binding LoginCommand}" />
        <Button Text="Continue as Guest" Command="{Binding ContinueAsGuestCommand}" />
    </StackLayout>
</ContentPage>
