<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSIT.ZB.Apps.Buyer.Views.Pages.OTP.OtpPage"
             Title="OtpPage">
    <StackLayout>
        <Label Text="Enter OTP" FontSize="Large" HorizontalOptions="Center" />
        <Entry Placeholder="Enter OTP" Text="{Binding Otp}" />
        <Button Text="Submit OTP" Command="{Binding SubmitOtpCommand}" />
    </StackLayout>
</ContentPage>